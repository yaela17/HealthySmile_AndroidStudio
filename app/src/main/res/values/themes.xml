<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthySmile" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/color_turquesa_oscuro</item>
    </style>

    <style name="activy_log_ing">
        <item name="android:background">@drawable/fondo_log_in</item>
    </style>

    <style name="nav_header_drawer">
        <item name="android:background">@drawable/side_nav_bar_lateral</item>
    </style>


    <style name="formBasicInput">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/color_formulario_drawable_tint</item>
        <item name="android:textColor">@color/color_formulario_text</item>
    </style>

    <style name="formBasicInput_nombre_usuario" parent="formBasicInput">
        <item name="android:drawableStart">@drawable/icon_person</item>
        <item name="android:hint">@string/texto_hint_campo_nombre</item>
        <item name="android:inputType">textPersonName|textAutoCorrect|textAutoComplete</item>
        <item name="android:autofillHints">username</item>
    </style>

    <style name="formBasicInput_correoElectronico" parent="formBasicInput">
        <item name="android:drawableStart">@drawable/icon_email</item>
        <item name="android:hint">@string/texto_hint_correo_electronico</item>
        <item name="android:inputType">textWebEmailAddress|textAutoComplete|textAutoCorrect</item>
        <item name="android:autofillHints">emailAddress</item>
    </style>

    <style name="formBasicInput_contraseña" parent="formBasicInput">
        <item name="android:drawableStart">@drawable/icon_lock</item>
        <item name="android:drawableEnd">@drawable/icon_visible_off</item>
        <item name="android:hint">@string/texto_hint_contraseña</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:autofillHints">password</item>
    </style>

    <style name="formBasicInput_codigo_verificacion" parent="formBasicInput">
        <item name="android:drawableStart">@drawable/icon_code_verification</item>
        <item name="android:hint">@string/texto_hint_codigo_verificacion</item>
        <item name="android:inputType">text</item>
        <item name="android:autofillHints">none</item>
    </style>



    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/custom_button_white_background</item> <!-- Fondo blanco -->
        <item name="android:textColor">@color/white</item> <!-- Texto en blanco -->
        <item name="android:textAllCaps">false</item> <!-- Texto en minúsculas -->
        <item name="android:elevation">4dp</item> <!-- Sombra para darle elevación -->
    </style>

    <style name="estilo_boton_home_azul">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:backgroundTint">#478ac9</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="Theme.HealthySmile" parent="Base.Theme.HealthySmile" />

    <style name="Theme.HealthySmile.NoActionBar" parent="Base.Theme.HealthySmile">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HealthySmile.AppBarOverlay" parent="Base.Theme.HealthySmile" />

    <style name="Theme.HealthySmile.PopupOverlay" parent="Base.Theme.HealthySmile" />

</resources>