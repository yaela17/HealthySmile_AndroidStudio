<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.iniciarSesion.sign_up.fragment_sign__up__verificacion_correo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            android:padding="30dp">

            <EditText
                android:id="@+id/sign_up_verificacion_input_codigo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

            <Button
                android:id="@+id/sign_up_verificacion_btn_verificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verificar"/>

            <TextView
                android:id="@+id/sign_up_verificacion_text_view_temporizador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tiempo restante para verificaciÃ³n : "/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>