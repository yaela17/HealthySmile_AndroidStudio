<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_profile_image_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:context=".gui.extraAndroid.settings.FragmentProfileImageSelector">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/profileImageSelectImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_circle_image"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:src="@drawable/default_photo_perfil_especialista"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/profileImageSelectImageIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/custom_circle_image"
            android:backgroundTint="#4CAF50"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:src="@drawable/icon_camera"
            android:layout_margin="8dp"
            tools:ignore="UnusedAttribute" />
    </FrameLayout>
</FrameLayout>