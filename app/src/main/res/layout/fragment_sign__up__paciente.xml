<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    tools:context=".gui.iniciarSesion.sign_up.Sign_Up_Paciente">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_formulario_background_tint_card_view"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_sign_up_paciente_registropaciente"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textColor="@color/color_titulo_formulario" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                style="@style/formBasicInput_nombre_usuario"
                android:id="@+id/fragSignUpPacienteInputNombreUsuario"/>

            <EditText
                android:id="@+id/fragSignUpPacienteInputCorreo"
                style="@style/formBasicInput_correoElectronico"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                style="@style/formBasicInput_contraseÃ±a"
                android:importantForAccessibility="yes"
                android:id="@+id/fragSignUpPacienteInputContrasena"/>

            <Button
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:text="@string/texto_boton_registrarse"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/color_formulario_boton"
                android:id="@+id/fragSignUpPacienteBtnRegistrarse"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>