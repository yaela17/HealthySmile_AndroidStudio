<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.gestion.administrador.Fragment_mostrar_productos_administrador">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos disponibles"
                android:textSize="20sp"
                android:textColor="@color/color_comun_text"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"/>

            <ListView
                android:id="@+id/mostrar_productos_disponibles_administrador_list_view"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos fuera de disponibilidad"
                android:textSize="20sp"
                android:textColor="@color/color_comun_text"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"/>

            <ListView
                android:id="@+id/mostrar_productos_no_disponibles_administrador_list_view"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
</FrameLayout>
