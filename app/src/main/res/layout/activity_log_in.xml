<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".gui.iniciarSesion.login.LogIn">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="@color/color_formulario_background_tint_card_view"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="30dp"
            android:background="@drawable/custom_edittext">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_boton_iniciarsesion"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textColor="@color/color_titulo_formulario"/>
            <EditText
                android:id="@+id/fragLogInInputCorreoUsuario"
                style="@style/formBasicInput_correoElectronico"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/fragLogInInputContrasenaUsuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                style="@style/formBasicInput_contraseÃ±a"
                android:importantForAccessibility="yes"/>
            <Button
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:text="@string/texto_boton_iniciarsesion"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/color_formulario_boton"
                android:textColor="@color/color_blanco"
                app:cornerRadius = "20dp"
                android:id="@+id/fragLogInBtnIniciarSesion"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>