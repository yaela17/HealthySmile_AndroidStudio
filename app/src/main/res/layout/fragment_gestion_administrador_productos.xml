<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".gui.gestion.Fragment_gestion_administrador_productos">

    <FrameLayout
        android:id="@+id/frame_gestion_administrador_productos_crud_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:menu_icon="@drawable/icon_menu"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="20dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_ver_productos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_visible"
            app:fab_colorNormal="@color/color_formulario_background_tint_card_view"
            app:fab_size="normal"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_agregar_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="normal"
            android:src="@drawable/icon_add"
            app:fab_colorNormal="@color/color_formulario_background_tint_card_view"/>


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_eliminar_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="normal"
            android:src="@drawable/icon_delete"
            app:fab_colorNormal="@color/color_formulario_background_tint_card_view"/>
    </com.github.clans.fab.FloatingActionMenu>
</FrameLayout>