<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plantilla_gestion_paciente_compras_compra_producto_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/color_azul_alice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/plantilla_gestion_paciente_compras_compra_producto_img_imagen"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/foto_a_seleccionar"
            android:background="@drawable/custom_rectangle_image"
            android:contentDescription="Imagen del producto" />

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/plantilla_gestion_paciente_compras_compra_producto_txt_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto"
                android:textColor="@color/color_azul_marino_profundo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/plantilla_gestion_paciente_compras_compra_producto_txt_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del producto"
                android:textColor="@color/color_azul_medianoche"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Costo y cantidad -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Precio -->
                <TextView
                    android:id="@+id/plantilla_gestion_paciente_compras_compra_producto_txt_costo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$250.00"
                    android:textColor="@color/color_turquesa_medio"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Separador -->
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textColor="@color/color_azul_acantilado"
                    android:layout_marginHorizontal="6dp"
                    android:textSize="14sp" />

                <!-- Cantidad -->
                <TextView
                    android:id="@+id/plantilla_gestion_paciente_compras_compra_producto_txt_cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x2"
                    android:textColor="@color/color_azul_acero"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
