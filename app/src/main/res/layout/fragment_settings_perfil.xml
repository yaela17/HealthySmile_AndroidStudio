<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.settings.settings_perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/settingsFotoPerfilGrande"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_circle_image"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:src="@drawable/default_photo_perfil_especialista" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/custom_circle_image"
                android:backgroundTint="#4CAF50"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:src="@drawable/icon_camera"
                android:layout_margin="8dp" />

        </FrameLayout>

        <ListView
            android:id="@+id/listViewSettingsPerfil"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>


</FrameLayout>