<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/FormularioModificarCitaComboHorariosDisponibles"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/color_azul_acero"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/FormularioModificarCitaInputMotivoCita"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:drawablePadding="8dp"
        android:gravity="start|top"
        android:hint="@string/texto_hint_motivo_cita"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:inputType="text"
        android:autofillHints="none"
        android:paddingEnd="20dp"/>

    <Spinner
        android:id="@+id/FormularioModificarCitaComboEspecialistas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/color_azul_acero"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/FormularioModificarCitaBtnGuardar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/texto_boton_guardar" />
</LinearLayout>
