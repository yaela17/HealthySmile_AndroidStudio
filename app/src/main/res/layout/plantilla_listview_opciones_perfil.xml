<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idPlantillaOpcionesPerfil"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="35dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/plantillaOpcionesPerfilLeftIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:contentDescription="@null"
        android:src="@drawable/icon_visible"
        app:tint="@color/plantilla_list_view_opciones_perfil_icon_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/plantillaOpcionesPerfilTitleInputFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_campo_nombre"
            android:textSize="20sp"
            android:textColor="@color/plantilla_list_view_opciones_perfil_title_color"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/plantillaOpcionesPerfilDescriptionInputFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_hint_descripcion"
            android:textColor="@color/plantilla_list_view_opciones_perfil_descripcion_color"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/plantillaOpcionesPerfilRightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:contentDescription="@null"
        android:src="@drawable/icon_visible"
        app:tint="@color/plantilla_list_view_opciones_perfil_icon_color"/>

</LinearLayout>
