<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.educacionDental.Fragment_visualizacion_modelos_3d_init">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black"
                android:padding="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vizualización de modelos 3D"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="37sp"/>
            </LinearLayout>

            <!-- Contenedor de imágenes 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelos_init_imagen_gingivitis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_square_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gingivitis" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gingivitis"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelos_init_imagen_caries_dentales"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_square_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/caries" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caries Dentales"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Contenedor de imágenes 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelos_init_imagen_cancer_bucal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_square_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cancer" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancer Bucal"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelos_init_imagen_traumatismos_bucodentales"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_square_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/traumatismo" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Traumatismos Bucodentales"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Contenedor de imágenes 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelos_init_imagen_halitosis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_square_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/halitosis" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Halitosis"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelos_init_imagen_sensibilidad_dental"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_square_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sensibilidad" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensibilidad Dental"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Contenedor de imágenes 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelos_init_imagen_implantes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_square_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/implantes" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Implantes"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/modelos_init_imagen_periodontitis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_square_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/periodontitis" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Periodontitis"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
