<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".ui.sign_up.Sign_Up_Especialista">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro especialista"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/color_text"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Nombre de usuario"
                android:drawableLeft="@drawable/icon_person"
                android:textColor="@color/color_text"
                android:drawablePadding="8dp"
                android:id="@+id/SignUpEspecialistaInputNombre"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Correo electronico"
                android:drawableLeft="@drawable/icon_email"
                android:textColor="@color/color_text"
                android:drawablePadding="8dp"
                android:id="@+id/SignUpEspecialistaInputCorreo"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="ContraseÃ±a"
                android:drawableLeft="@drawable/icon_lock"
                android:textColor="@color/color_text"
                android:drawablePadding="8dp"
                android:id="@+id/SignUpEspecialistaInputContrasena"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Cedula profesional"
                android:drawableLeft="@drawable/icon_cedulaprofesional"
                android:textColor="@color/color_text"
                android:drawablePadding="8dp"
                android:id="@+id/SignUpEspecialistaInputCedulaProfesional"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:textColor="@color/color_text"
                android:drawablePadding="8dp"
                android:id="@+id/SignUpEspecialistaComboEspecialidad"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:paddingTop="20dp"
                android:paddingStart="8dp"
                android:hint="Descripcion"
                android:gravity="start|top"
                android:textColor="@color/color_text"
                android:drawablePadding="8dp"
                android:id="@+id/SignUpEspecialistaInputDescripcion"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Iniciar sesion"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/color_principal_clarote"
                android:id="@+id/SignUpEspecialistaBtnRegistrarse"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>