<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.consulta.fragment_cosulta_virtual_init">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="450sp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/calendario"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/content_description_imagen_fondo_consulta_virtual_init"
                    android:alpha="0.5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/titulo_consulta_virtual_consultorio_digital"
                        android:textColor="@color/white"
                        android:textSize="35sp"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="@string/titulo_consulta_nuestrosservicios"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/background_image_consulta"
                    android:src="@drawable/chatbot"
                    android:contentDescription="@string/content_description_imagen_opcion_chatbot"
                    tools:ignore="UnusedAttribute" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_boton_chatbot"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="20dp">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/background_image_consulta"
                    android:src="@drawable/dentistaaa"
                    android:contentDescription="@string/content_description_imagen_opcion_especialista"
                    tools:ignore="UnusedAttribute" />
                <Button
                    android:id="@+id/fragment_consultavirtual_init_btnEspecialista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_boton_especialista"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color_text"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/background_image_consulta"
                    android:src="@drawable/cabos"
                    android:contentDescription="@string/content_description_imagen_opcion_agendar_cita"
                    tools:ignore="UnusedAttribute" />
                <Button
                    android:id="@+id/fragment_consultavirtual_init_btnAgendarCita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_boton_agendarcita"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="20dp">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/background_image_consulta"
                    android:src="@drawable/historial"
                    android:contentDescription="@string/content_description_imagen_opcion_historial_dental"
                    tools:ignore="UnusedAttribute" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_boton_historialdental"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
