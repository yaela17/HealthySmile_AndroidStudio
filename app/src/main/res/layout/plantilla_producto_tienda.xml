<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- Contenedor Principal -->
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_azul_alice"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:backgroundTintMode="src_in"
        android:backgroundTint="@color/color_azul_alice">

        <!-- Imagen del Producto -->
        <ImageView
            android:id="@+id/plantilla_producto_tienda_imagenProducto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/foto_a_seleccionar"/>

        <!-- Nombre del Producto -->
        <TextView
            android:id="@+id/plantilla_producto_tienda_nombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Nombre del Producto"
            android:textStyle="bold"
            android:textColor="@color/color_azul_marino_profundo"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Precio del Producto -->
        <TextView
            android:id="@+id/plantilla_producto_tienda_costoProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$109.50"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="4dp" />

        <!-- Cantidad Disponible -->
        <TextView
            android:id="@+id/plantilla_producto_tienda_cantidadProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 10"
            android:textSize="11sp"
            android:textColor="@color/color_azul_acantilado"
            android:layout_marginTop="2dp" />

        <!-- Descripción del Producto -->
        <TextView
            android:id="@+id/plantilla_producto_tienda_descripcionProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción breve del producto"
            android:textSize="11sp"
            android:textColor="@color/color_azul_polvo"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Etiqueta "No Disponible" -->
    <TextView
        android:id="@+id/plantilla_producto_tienda_disponible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:text="A\nG\nO\nT\nA\nD\nO"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:padding="14dp"
        android:rotation="-20"
        android:elevation="6dp"/>
</FrameLayout>
